<div class="container mx-auto mt-6 sm:p-2">
  <div class="grid grid-cols-1 sm:grid-cols-1 lg:grid-cols-3 gap-4 items-center text-center ">
    <% orders.forEach(order => { %>
      <div  class="orderCard <%= order.status === 'pending' ? 'bg-light-blue-200' : (order.status === 'completed' ? 'bg-green-200' : 'bg-blue-200') %> rounded-2xl shadow-md p-4 flex flex-col justify-between items-center  border-white border-x-4 border-dashed drop-shadow-[0_35px_35px_rgba(255,255,255,0.50)]">
        <p class="sm:text-lg text-base font-extrabold ">↜:Order ID🆔:↝ <p class="font-semibold text-gray-600 mb-2"><%= order._id %></p></p>
        <p class="text-black  font-extrabold">:👤Customer👤:<p class="font-semibold text-gray-600 mb-2"><%= order.customerName %></p> </p>
        <p class="text-black font-extrabold">:💰Total Price💰: <p  class="font-semibold text-gray-600 mb-2">₹<%= order.totalPrice %></p></p>

        <!-- Display items -->
        <div class="mb-2 border-white border-dash border-y-4 rounded-xl gap-1">
          <p class="text-black font-extrabold">👉🍕 Items 🍕 👈</p>
          <ul class="list-none list-inside font-semibold">
            <% for(let product of Object.values(order.items)){ %>
              <li><%= product.item.name %> - <%= product.qty %> - ₹<%= product.item.price * product.qty %></li>
          <% }; %>
          </ul>
        </div>
        <div class=" border-white border-y-4 rounded-xl gap-1"><p  class="text-black font-extrabold">⏰Pickup Time⏰: <p class="font-semibold text-gray-600 mb-2"><%= order.pickup_time %></p></p></div>
        <div class=" border-white border-y-4 rounded-xl gap-1"><p  class="text-black font-extrabold">📅Date📅: <p class="font-semibold text-gray-600 mb-2"><%= order.createdAt.toDateString() %></p></p></div>
        <div class=" border-white border-y-4 rounded-xl gap-1"><p  class="text-black font-extrabold">⏳Time⏳: <p class="font-semibold text-gray-600 mb-2"><%= order.createdAt.toLocaleTimeString() %></p></p></div>

        <!-- Add more order details as needed -->
        <div class=" mt-4 ">
          <!-- <a href="/admin/orderDetails/<%= order._id %>" class="text-blue-500 hover:underline">View Details</a> -->

          <!-- Three buttons -->
          <div class="flex-1 flex items-center justify-between space-x-2 border-double  hover:border-4 border-white p-1 rounded-3xl hover:bg-gray-200 hover:skew-x-6 ">
            <button class="bg-green-400 text-white px-2 py-1 rounded-xl sm:px-4 sm:py-2 border-dotted border-white border-2 hover:-translate-y-4 hover:skew-x-3 hover:scale-y-110 hover:shadow-2xl hover:border-4 approveButton hover:animate-bounce">Completed</button>
            <button class="bg-yellow-400 text-white px-2 py-1 rounded-xl sm:px-4 sm:py-2 border-dotted border-white border-2 hover:-translate-y-4 hover:skew-x-3 hover:scale-y-110 hover:shadow-2xl hover:border-4 Pending hover:animate-bounce">Pending</button>
            <button class="bg-red-400 text-white px-2 py-1 rounded-xl sm:px-4 sm:py-2 border-dotted border-white border-2 hover:-translate-y-4 hover:skew-x-3 hover:scale-y-110 hover:shadow-2xl hover:border-4 Reject hover:animate-bounce">Reject</button>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>





      


      




